<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="library">
  <class name="models.Book" table="book">
    <id column="id" name="id">
      <generator class="increment"/>
    </id>
    <property column="author" name="author"/>
    <property column="title" name="title"/>
    <property column="isbn" name="isbn"/>
    <property column="genre" name="genre"/>
    <property column="age" name="age"/>
    <property column="quantity" name="quantity"/>
  </class>
</hibernate-mapping>
